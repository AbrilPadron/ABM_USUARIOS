@model ABM_USUARIOS.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container mt-4">
    <h2 class="text-center text-danger">Eliminar Usuario</h2>
    <h3 class="text-center">¿Estás seguro de que deseas eliminar este usuario?</h3>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h4>Detalles del Usuario</h4>
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Usuario1)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Usuario1)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Contraseña)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Contraseña)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Apellido)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Apellido)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Direccion)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Direccion)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.FechaNac)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FechaNac)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Telefono)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Telefono)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Ciudad)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Ciudad)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CodPostal)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CodPostal)
                </dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="IdUsuario" />
                <div class="form-group text-center">
                    <input type="submit" value="Eliminar" class="btn btn-danger btn-lg" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg ms-3">Volver a la Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
